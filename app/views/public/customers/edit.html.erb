<div class="container">
  <div class="row pb-3">
    <h4 style="background-color: silver;">会員情報編集</h4>
  </div>
    <%= form_with model: @customer, url: infomation_path, method: :patch, local:true do |f| %>

  <div class="row pb-3">
    <div class="col-3">氏名</div>
    <div class="col-3"><%= f.text_field :last_name %></div>
    <div class="col-1"></div>
    <div class="col-3"><%= f.text_field :first_name %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">フリガナ</div>
    <div class="col-3"><%= f.text_field :last_name_kana %></div>
    <div class="col-1"></div>
    <div class="col-3"><%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">郵便番号</div>
    <div class="col-3"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">住所</div>
    <div class="col-3"><%= f.text_area :address %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">電話番号</div>
    <div class="col-3"><%= f.text_field :telephone_number %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">メールアドレス</div>
    <div class="col-3"><%= f.text_area :email %></div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-5"><%= f.submit '編集内容を保存', class: "btn btn-success" %></div>
    <div class="col-1"></div>
    <div class="col-3"><%= link_to '退会する', unsubscribe_path, class: "btn btn-danger" %></div>
  </div>
    <% end %>

</div>