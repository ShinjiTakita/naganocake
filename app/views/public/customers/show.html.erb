<div class="container">
 <div class="row">
      <h3 style="background-color: silver;">マイページ</h3>
 </div>
 <div class="row">
      <div class="col-3">
        <h4>登録情報</h4>
      </div>
      <div class="col-3">
          <%= link_to '編集する', edit_infomation_path(@customer.id), class: "btn btn-success" %>
      </div>
      <div class="col-4"></div>
 </div>

 <div class="row">
     <div class="col-3 border", style="background-color: silver;">氏名</div>
     <div class="col-6 border"><%= @customer.last_name %><%= @customer.first_name %></div>
 </div>

 <div class="row">
    <div class="col-3 border", style="background-color: silver;">カナ</div>
    <div class="col-6 border"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>
 </div>

 <div class="row">
    <div class="col-3 border", style="background-color: silver;">郵便番号</div>
    <div class="col-6 border"><%= @customer.postal_code %></div>
 </div>

 <div class="row">
    <div class="col-3 border", style="background-color: silver;">住所</div>
    <div class="col-6 border"><%= @customer.address %></div>
 </div>

 <div class="row">
    <div class="col-3 border", style="background-color: silver;">電話番号</div>
    <div class="col-6 border"><%= @customer.telephone_number %></div>
 </div>

 <div class="row">
    <div class="col-3 border", style="background-color: silver;">メールアドレス</div>
    <div class="col-6 border"><%= @customer.email %></div>
 </div>

 <div class="row pt-3">
    <h5 class="col-2">配送先</h5>
    <div class="col-4"><%= link_to '一覧を見る', addresses_path, class: "btn btn-primary" %></div>
 </div>

<div class="row pt-3">
    <h5 class="col-2">注文履歴</h5>
    <div class="col-4"><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></div>
 </div>
</div>
