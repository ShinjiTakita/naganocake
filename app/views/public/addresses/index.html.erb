<div class="container">
  <div class="row">
    <h4 style="background-color: silver;">配送先登録/一覧</h4>
  </div>
    <%= form_with model: @address, url: addresses_path, local:true do |f| %>

  <div class="row pb-3">
    <div class="col-4">郵便番号（ハイフンなし）</div>
    <div class="col-4"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row pb-3">
    <div class="col-4">住所</div>
    <div class="col-4"><%= f.text_area :address %></div>
  </div>

  <div class="row pb-5">
    <div class="col-4">宛名</div>
    <div class="col-4"><%= f.text_field :name %></div>
    <div class="col-4"><%= f.submit '新規登録', class: "btn btn-success" %></div>
  </div>
  <% end %>


    <!--配送先一覧-->

  <div class="row">
    <div class="col-3 border", style="background-color: silver;">郵便番号</div>
    <div class="col-4 border", style="background-color: silver;">住所</div>
    <div class="col-2 border", style="background-color: silver;">宛名</div>
    <div class="col-3 border", style="background-color: silver;"></div>
  </div>

  <% @addresses.each do |address| %>
  <div class="row">
    <div class="col-3 border"><%= address.postal_code %></div>
    <div class="col-4 border"><%= address.address %></div>
    <div class="col-2 border"><%= address.name %></div>
    <div class="col-3 border">
      <%= link_to '編集する', edit_address_path(address.id), class: "btn btn-success" %>
      <%= link_to '削除する', address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </div>
  </div>

    <% end %>

</div>