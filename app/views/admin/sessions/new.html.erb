<div class="container">
  <div class="row pb-5">
    <h4 style="background-color: silver;">管理者ログイン</h4>
  </div>


    <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3"><%= f.label :メールアドレス %></div>
    <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3"><%= f.label :パスワード %></div>
    <div class="col-6"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <div class="row">
    <div class="col-5"></div>
    <div class="actions col-6"><%= f.submit "ログイン", class: "btn btn-primary" %></div>
  </div>

      <!--% if devise_mapping.rememberable? %>
        div class="field">
          %= f.check_box :remember_me %>
          %= f.label :remember_me %>
        /div>
      % end %>-->

    <% end %>

    <!--%= render "admin/shared/links" %>-->
</div>