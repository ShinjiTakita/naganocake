<div class="container">
  <div class="row pb-5">
    <h4 style="background-color: silver;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  </div>

  <div class="row pb-3">
    <div class="col-3">会員ID</div>
    <div class="col-3"><%= @customer.id %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">氏名</div>
    <div class="col-3"><%= @customer.last_name %><%= @customer.first_name %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">フリガナ</div>
    <div class="col-3"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">郵便番号</div>
    <div class="col-3"><%= @customer.postal_code %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">住所</div>
    <div class="col-6"><%= @customer.address %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">電話番号</div>
    <div class="col-3"><%= @customer.telephone_number %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">メールアドレス</div>
    <div class="col-3"><%= @customer.email %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">会員ステータス</div>
    <div class="col-3"><%= @customer.is_active ? '有効' : '退会' %></div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-3"><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></div>
    <div class="col-4"><%= link_to "注文履歴一覧を見る", admin_home_path, class: "btn btn-primary" %></div>
  </div>
</div>