<div class="container">
  <div class="row pb-5">
    <h4 style="background-color: silver;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>

    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="row pb-3">
    <div class="col-3">会員ID</div>
    <div class="col-3"><%= @customer.id %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">氏名</div>
    <div class="col-3"><%= f.text_field :last_name %></div>
    <div class="col-1"></div>
    <div class="col-3"><%= f.text_field :first_name %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">フリガナ</div>
    <div class="col-3"><%= f.text_field :last_name_kana %></div>
    <div class="col-1"></div>
    <div class="col-3"><%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">郵便番号</div>
    <div class="col-3"><%= f.text_field :postal_code %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">住所</div>
    <div class="col-3"><%= f.text_area :address %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">電話番号</div>
    <div class="col-3"><%= f.text_field :telephone_number %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">メールアドレス</div>
    <div class="col-3"><%= f.text_field :email %></div>
  </div>

  <div class="row pb-3">
    <div class="col-3">会員ステータス</div>
    <div class="col-2">
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "有効" %>
    </div>
    <div class="col-2">
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "退会" %>
    </div>
  </div>

  <div class="row pb-3">
    <div class="col-3"></div>
    <div class="col-3"><%= f.submit '変更を保存', class: "btn btn-success" %></div>
  </div>
    <% end %>
</div>