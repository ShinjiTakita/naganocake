<div class="container">
  <div class="row pb-5">
    <h4 style="background-color: silver;">商品詳細</h4>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-4"><%= image_tag @item.get_image, :size => '400x300' %></div>
    <div class="col-4"></div>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3">商品名</div>
    <div class="col-3"><%= @item.name %></div>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3">商品説明</div>
    <div class="col-3"><%= @item.introduction %></div>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3">ジャンル</div>
    <div class="col-3"><%= @item.genre.name %></div>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3">税込価格（税抜価格）</div>
    <div class="col-3"><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</div>
  </div>

  <div class="row pb-3">
    <div class="col-2"></div>
    <div class="col-3">販売ステータス</div>
    <div class="col-3"><%= @item.status %></div>
  </div>

  <div class="row pb-3">
    <div class="col-5"></div>
    <div class="col-3"><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></div>
    <div class="col-3"></div>
  </div>
</div>