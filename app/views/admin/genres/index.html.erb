<div class="container">
  <div class="row pb-5">
   <div class="col-2"></div>
   <h4 style="background-color: silver;">ジャンル一覧・追加</h4>
  </div>
  <!--ジャンル追加機能-->
  <%= form_with model: @genre, url: admin_genres_path,local:true do |f| %>

  <div class="row pb-5">
   <div class="col-3">ジャンル名</div>
   <div class="col-4"><%= f.text_field :name %></div>
   <div class="col-4"><%= f.submit '新規登録', class: "btn btn-success" %></div>
  </div>
  <% end %>

  <!--ジャンル一覧表示-->
  <div class="row pb-5">
   <div class="col-"></div>
   <h4 class="border", style="background-color: silver;">ジャンル</h4>
  </div>
  <% @genres.each do |genre| %>
  <!--注意！！＝イコールはつけない！、each分には=不要-->

  <div class="row">
   <div class="col-3 border-top border-bottom pb-3"><%= genre.name %></div>
   <div class="col-3 border-bottom"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>